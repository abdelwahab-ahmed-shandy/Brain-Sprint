@model Models.ViewModels.LearningPathsVM

@{
    ViewData["Title"] = "Learning Paths Management";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4"><i class="fas fa-map-signs me-2"></i>Learning Paths</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Create New
        </a>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-table me-1"></i> Learning Paths Management
                </h5>
                <div class="small">
                    <i class="fas fa-filter me-1"></i> Advanced Filtering
                </div>
            </div>
        </div>

        <div class="card-body">
            <!-- Search and Filter Section -->
            <div class="search-filter-section mb-4 p-3 bg-light rounded">
                <form method="get" class="row g-3 align-items-end">
                    <div class="col-md-10">
                        <label for="searchQuery" class="form-label">Search Learning Paths</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" name="query" id="searchQuery" class="form-control"
                                   placeholder="Search by name, description..."
                                   value="@Model.Pagination.Query">
                        </div>
                    </div>
                   
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter me-1"></i> Apply
                        </button>
                    </div>
                </form>
            </div>

            <!-- Learning Paths Table -->
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th width="80px">Icon</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th width="220px" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.LearningPaths.Any())
                        {
                            @foreach (var item in Model.LearningPaths)
                            {
                                <tr>
                                    <td class="align-middle text-center">
                                        @if (!string.IsNullOrEmpty(item.IconUrl))
                                        {
                                            <img src="@item.IconUrl" alt="Icon" class="img-thumbnail" style="width: 40px; height: 40px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <i class="fas fa-map-signs fa-2x text-secondary"></i>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <strong>@item.Name</strong>
                                    </td>
                                    <td class="align-middle">
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <span class="d-inline-block text-truncate" style="max-width: 300px;">
                                                @item.Description
                                            </span>
                                        }
                                    </td>
                                    <td class="align-middle text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-info" title="Details">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4">
                                    <div class="empty-state">
                                        <i class="fas fa-map-signs fa-3x text-muted mb-3"></i>
                                        <h5>No Learning Paths Found</h5>
                                        <p class="text-muted">Create your first learning path to get started</p>
                                        <a asp-action="Create" class="btn btn-primary mt-2">
                                            <i class="fas fa-plus me-1"></i> Create Learning Path
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination and Summary -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4">
                <div class="mb-2 mb-md-0">
                    <span class="text-muted">
                        Showing <strong>@((Model.Pagination.CurrentPage - 1) * Model.Pagination.PageSize + 1)</strong> to
                        <strong>@Math.Min(Model.Pagination.CurrentPage * Model.Pagination.PageSize, Model.Pagination.TotalItems)</strong> of
                        <strong>@Model.Pagination.TotalItems</strong> entries
                    </span>
                </div>

                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@(Model.Pagination.CurrentPage - 1)"
                               asp-route-query="@Model.Pagination.Query"
                               asp-route-pageSize="@Model.Pagination.PageSize">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-query="@Model.Pagination.Query"
                                   asp-route-pageSize="@Model.Pagination.PageSize">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.Pagination.CurrentPage == Model.Pagination.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@(Model.Pagination.CurrentPage + 1)"
                               asp-route-query="@Model.Pagination.Query"
                               asp-route-pageSize="@Model.Pagination.PageSize">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .empty-state {
            padding: 2rem;
            text-align: center;
            background-color: #f8f9fa;
            border-radius: 0.5rem;
        }

        .table th {
            white-space: nowrap;
        }

        .search-filter-section {
            background-color: #f8f9fa;
            border-left: 4px solid #0d6efd;
        }

        .img-thumbnail {
            padding: 0.25rem;
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
        }
    </style>
}

@section Scripts {
    <script>
        // Add some interactivity
        $(document).ready(function() {
            // Highlight search term in table
            const searchQuery = "@Model.Pagination.Query";
            if (searchQuery) {
                $("td").highlight(searchQuery);
            }

            // Tooltips for action buttons
            $('[title]').tooltip({
                placement: 'top',
                trigger: 'hover'
            });
        });
    </script>
}