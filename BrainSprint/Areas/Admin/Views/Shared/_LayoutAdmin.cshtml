<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Gamified Learning Platform</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/Admin.css" />

</head>
<body class="bg-gray-50 font-sans">
    <div class="flex h-screen">
        <!-- Enhanced Sidebar -->
        <div class="sidebar text-white w-64 space-y-6 py-7 px-2 fixed h-full">
            <div class="flex items-center space-x-2 px-4">
                <i class="fas fa-gamepad text-2xl text-indigo-300"></i>
                <span class="text-2xl font-extrabold">BrainSprint</span>
                <span class="text-xs bg-indigo-600 px-2 py-1 rounded-full ml-auto">ADMIN</span>
            </div>
            <nav>
                <a href="#" class="flex items-center py-2.5 px-4 rounded transition duration-200 hover:bg-indigo-700 bg-indigo-700">
                    <i class="fas fa-tachometer-alt mr-3 text-indigo-200"></i>
                    <span>Dashboard</span>
                    <i class="fas fa-chevron-right ml-auto text-xs text-indigo-300"></i>
                </a>
                <a href="#" class="flex items-center py-2.5 px-4 rounded transition duration-200 hover:bg-indigo-700">
                    <i class="fas fa-book mr-3 text-indigo-200"></i>
                    <span>Courses</span>
                </a>
                <a href="#" class="flex items-center py-2.5 px-4 rounded transition duration-200 hover:bg-indigo-700">
                    <i class="fas fa-users mr-3 text-indigo-200"></i>
                    <span>Students</span>
                    <span class="ml-auto bg-indigo-600 text-white text-xs px-2 py-1 rounded-full">1.2K</span>
                </a>
                <a href="#" class="flex items-center py-2.5 px-4 rounded transition duration-200 hover:bg-indigo-700">
                    <i class="fas fa-trophy mr-3 text-indigo-200"></i>
                    <span>Badges</span>
                    <span class="ml-auto bg-indigo-600 text-white text-xs px-2 py-1 rounded-full">56</span>
                </a>
                <a href="#" class="flex items-center py-2.5 px-4 rounded transition duration-200 hover:bg-indigo-700">
                    <i class="fas fa-chart-line mr-3 text-indigo-200"></i>
                    <span>Analytics</span>
                </a>
                <a href="#" class="flex items-center py-2.5 px-4 rounded transition duration-200 hover:bg-indigo-700">
                    <i class="fas fa-cog mr-3 text-indigo-200"></i>
                    <span>Settings</span>
                </a>
            </nav>
            <div class="absolute bottom-0 w-full left-0 px-4 py-3 bg-indigo-900">
                <div class="flex items-center">
                    <div class="bg-indigo-700 p-2 rounded-full">
                        <i class="fas fa-user-shield text-indigo-200"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium">Admin Panel</p>
                        <p class="text-xs text-indigo-300">Super Admin Access</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 ml-64">
            <!-- Enhanced Top Navigation -->
            <header class="bg-white shadow-sm py-4 px-6 flex justify-between items-center border-b">
                <div class="flex items-center space-x-4">
                    <h1 class="text-2xl font-bold text-gray-800 flex items-center">
                        <span>Dashboard Overview</span>
                        <span class="ml-2 text-sm bg-indigo-100 text-indigo-800 px-2 py-1 rounded-full">Today: <span id="current-date"></span></span>
                    </h1>
                </div>
                <div class="flex items-center space-x-6">
                    <div class="relative group">
                        <i class="fas fa-bell text-gray-500 hover:text-indigo-600 cursor-pointer text-xl"></i>
                        <span class="absolute top-0 right-0 h-2 w-2 rounded-full bg-red-500"></span>
                        <div class="absolute right-0 mt-2 w-72 bg-white shadow-lg rounded-lg p-4 hidden group-hover:block z-10">
                            <div class="flex justify-between items-center mb-2">
                                <h3 class="font-bold">Notifications</h3>
                                <span class="text-xs text-indigo-600">Mark all as read</span>
                            </div>
                            <div class="text-sm space-y-2">
                                <p class="p-2 hover:bg-gray-50 rounded">5 new student enrollments</p>
                                <p class="p-2 hover:bg-gray-50 rounded">3 assignments submitted</p>
                                <p class="p-2 hover:bg-gray-50 rounded">System update available</p>
                            </div>
                        </div>
                    </div>
                    <div class="flex items-center space-x-2">
                        <button class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition flex items-center">
                            <i class="fas fa-sign-out-alt mr-2"></i> Logout
                        </button>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <main class="p-6">
                <!-- Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                    <div class="bg-white rounded-xl shadow p-6 stat-card transition duration-300 border-l-4 border-indigo-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500 text-sm font-medium">Total Students</p>
                                <h3 class="text-2xl font-bold">1,248</h3>
                                <p class="text-green-500 text-xs flex items-center">
                                    <i class="fas fa-arrow-up mr-1"></i> 12% from last month
                                </p>
                            </div>
                            <div class="bg-indigo-100 p-3 rounded-full">
                                <i class="fas fa-users text-indigo-600 text-xl"></i>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white rounded-xl shadow p-6 stat-card transition duration-300 border-l-4 border-green-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500 text-sm font-medium">Active Courses</p>
                                <h3 class="text-2xl font-bold">56</h3>
                                <p class="text-green-500 text-xs flex items-center">
                                    <i class="fas fa-plus mr-1"></i> 5 new courses
                                </p>
                            </div>
                            <div class="bg-green-100 p-3 rounded-full">
                                <i class="fas fa-book text-green-600 text-xl"></i>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white rounded-xl shadow p-6 stat-card transition duration-300 border-l-4 border-yellow-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500 text-sm font-medium">Badges Awarded</p>
                                <h3 class="text-2xl font-bold">3,742</h3>
                                <p class="text-green-500 text-xs flex items-center">
                                    <i class="fas fa-fire mr-1"></i> 324 this week
                                </p>
                            </div>
                            <div class="bg-yellow-100 p-3 rounded-full">
                                <i class="fas fa-trophy text-yellow-600 text-xl"></i>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white rounded-xl shadow p-6 stat-card transition duration-300 border-l-4 border-blue-500">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500 text-sm font-medium">Completion Rate</p>
                                <h3 class="text-2xl font-bold">78%</h3>
                                <p class="text-green-500 text-xs flex items-center">
                                    <i class="fas fa-chart-line mr-1"></i> 8% improvement
                                </p>
                            </div>
                            <div class="bg-blue-100 p-3 rounded-full">
                                <i class="fas fa-check-circle text-blue-600 text-xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity and Top Students -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                    <!-- Enhanced Recent Activity -->
                    <div class="lg:col-span-2 bg-white rounded-xl shadow overflow-hidden">
                        <div class="p-6 border-b">
                            <div class="flex justify-between items-center">
                                <h2 class="text-xl font-bold">Recent Activity</h2>
                                <button class="text-indigo-600 text-sm font-medium">View All</button>
                            </div>
                        </div>
                        <div class="divide-y">
                            <div class="p-4 hover:bg-gray-50 transition">
                                <div class="flex items-start">
                                    <div class="bg-indigo-100 p-3 rounded-full mr-3 flex-shrink-0">
                                        <i class="fas fa-trophy text-indigo-600"></i>
                                    </div>
                                    <div class="flex-1">
                                        <p class="font-medium">Sarah Johnson earned the "Python Master" badge</p>
                                        <p class="text-gray-500 text-sm">Completed Advanced Python Course with 95% score</p>
                                        <div class="flex items-center mt-1">
                                            <span class="text-gray-400 text-xs">2 hours ago</span>
                                            <span class="ml-2 bg-indigo-50 text-indigo-700 text-xs px-2 py-0.5 rounded-full">Achievement</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="p-4 hover:bg-gray-50 transition">
                                <div class="flex items-start">
                                    <div class="bg-green-100 p-3 rounded-full mr-3 flex-shrink-0">
                                        <i class="fas fa-book text-green-600"></i>
                                    </div>
                                    <div class="flex-1">
                                        <p class="font-medium">New course published: "Game Development with Unity"</p>
                                        <p class="text-gray-500 text-sm">By instructor Mark Williams</p>
                                        <div class="flex items-center mt-1">
                                            <span class="text-gray-400 text-xs">5 hours ago</span>
                                            <span class="ml-2 bg-green-50 text-green-700 text-xs px-2 py-0.5 rounded-full">New</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="p-4 hover:bg-gray-50 transition">
                                <div class="flex items-start">
                                    <div class="bg-yellow-100 p-3 rounded-full mr-3 flex-shrink-0">
                                        <i class="fas fa-users text-yellow-600"></i>
                                    </div>
                                    <div class="flex-1">
                                        <p class="font-medium">25 new students enrolled today</p>
                                        <p class="text-gray-500 text-sm">Most popular course: "Web Development Bootcamp"</p>
                                        <div class="flex items-center mt-1">
                                            <span class="text-gray-400 text-xs">1 day ago</span>
                                            <span class="ml-2 bg-yellow-50 text-yellow-700 text-xs px-2 py-0.5 rounded-full">Growth</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Enhanced Top Students -->
                    <div class="bg-white rounded-xl shadow overflow-hidden">
                        <div class="p-6 border-b">
                            <div class="flex justify-between items-center">
                                <h2 class="text-xl font-bold">Leaderboard</h2>
                                <button class="text-indigo-600 text-sm font-medium">See Rankings</button>
                            </div>
                        </div>
                        <div class="divide-y">
                            <div class="p-4 top-student">
                                <div class="flex items-center">
                                    <div class="bg-gradient-to-br from-yellow-400 to-yellow-600 text-white font-bold w-8 h-8 rounded-full flex items-center justify-center mr-3">1</div>
                                    <div class="flex-1">
                                        <p class="font-medium">Emily Chen</p>
                                        <div class="flex items-center text-xs text-gray-500">
                                            <span>1,450 points</span>
                                            <span class="mx-1">•</span>
                                            <span>12 badges</span>
                                        </div>
                                    </div>
                                    <div class="text-yellow-600">
                                        <i class="fas fa-crown"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="p-4 top-student">
                                <div class="flex items-center">
                                    <div class="bg-gradient-to-br from-gray-400 to-gray-600 text-white font-bold w-8 h-8 rounded-full flex items-center justify-center mr-3">2</div>
                                    <div class="flex-1">
                                        <p class="font-medium">Michael Rodriguez</p>
                                        <div class="flex items-center text-xs text-gray-500">
                                            <span>1,320 points</span>
                                            <span class="mx-1">•</span>
                                            <span>10 badges</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="p-4 top-student">
                                <div class="flex items-center">
                                    <div class="bg-gradient-to-br from-amber-500 to-amber-700 text-white font-bold w-8 h-8 rounded-full flex items-center justify-center mr-3">3</div>
                                    <div class="flex-1">
                                        <p class="font-medium">Jessica Kim</p>
                                        <div class="flex items-center text-xs text-gray-500">
                                            <span>1,280 points</span>
                                            <span class="mx-1">•</span>
                                            <span>9 badges</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="p-4 top-student">
                                <div class="flex items-center">
                                    <div class="border border-gray-300 text-gray-700 font-bold w-8 h-8 rounded-full flex items-center justify-center mr-3">4</div>
                                    <div class="flex-1">
                                        <p class="font-medium">David Wilson</p>
                                        <div class="flex items-center text-xs text-gray-500">
                                            <span>1,150 points</span>
                                            <span class="mx-1">•</span>
                                            <span>8 badges</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Enhanced Badge Management -->
                <div class="bg-white rounded-xl shadow overflow-hidden">
                    <div class="p-6 border-b flex justify-between items-center">
                        <h2 class="text-xl font-bold">Badge Management</h2>
                        <div class="flex space-x-3">
                            <button class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition flex items-center">
                                <i class="fas fa-plus mr-2"></i> Create New Badge
                            </button>
                            <button class="border border-indigo-600 text-indigo-600 px-4 py-2 rounded-lg hover:bg-indigo-50 transition flex items-center">
                                <i class="fas fa-filter mr-2"></i> Filter
                            </button>
                        </div>
                    </div>
                    <div class="p-6 grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
                        <!-- Badge Item -->
                        <div class="border rounded-xl p-4 text-center badge-item transition duration-300 hover:shadow-md">
                            <div class="bg-gradient-to-br from-yellow-100 to-yellow-50 text-yellow-600 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-3">
                                <i class="fas fa-star text-2xl"></i>
                            </div>
                            <h3 class="font-bold text-sm">Fast Learner</h3>
                            <p class="text-gray-500 text-xs mt-1">Complete 5 lessons in one day</p>
                            <div class="mt-3">
                                <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">Common</span>
                            </div>
                        </div>
                        <!-- Badge Item -->
                        <div class="border rounded-xl p-4 text-center badge-item transition duration-300 hover:shadow-md">
                            <div class="bg-gradient-to-br from-blue-100 to-blue-50 text-blue-600 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-3">
                                <i class="fas fa-check-circle text-2xl"></i>
                            </div>
                            <h3 class="font-bold text-sm">Perfect Score</h3>
                            <p class="text-gray-500 text-xs mt-1">Score 100% on any quiz</p>
                            <div class="mt-3">
                                <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">Rare</span>
                            </div>
                        </div>
                        <!-- Badge Item -->
                        <div class="border rounded-xl p-4 text-center badge-item transition duration-300 hover:shadow-md">
                            <div class="bg-gradient-to-br from-green-100 to-green-50 text-green-600 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-3">
                                <i class="fas fa-trophy text-2xl"></i>
                            </div>
                            <h3 class="font-bold text-sm">Course Master</h3>
                            <p class="text-gray-500 text-xs mt-1">Complete all lessons in a course</p>
                            <div class="mt-3">
                                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Epic</span>
                            </div>
                        </div>
                        <!-- Badge Item -->
                        <div class="border rounded-xl p-4 text-center badge-item transition duration-300 hover:shadow-md">
                            <div class="bg-gradient-to-br from-red-100 to-red-50 text-red-600 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-3">
                                <i class="fas fa-bolt text-2xl"></i>
                            </div>
                            <h3 class="font-bold text-sm">Quick Thinker</h3>
                            <p class="text-gray-500 text-xs mt-1">Finish quiz in half the time</p>
                            <div class="mt-3">
                                <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full">Legendary</span>
                            </div>
                        </div>
                        <!-- Add Badge Placeholder -->
                        <div class="border-2 border-dashed border-gray-300 rounded-xl p-4 text-center flex flex-col items-center justify-center hover:bg-gray-50 cursor-pointer transition">
                            <div class="bg-gray-100 text-gray-400 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-3">
                                <i class="fas fa-plus text-xl"></i>
                            </div>
                            <h3 class="font-bold text-sm text-gray-600">Add New Badge</h3>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    @await Html.PartialAsync("_NotificationAdmin")

    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Scripts", required: false)


    <script>
        // Display current date
        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        document.getElementById('current-date').textContent = new Date().toLocaleDateString('en-US', options);

        // Add hover effects for interactive elements
        document.querySelectorAll('.stat-card, .badge-item, .top-student').forEach(item => {
            item.style.transition = 'all 0.3s ease';
        });
    </script>
</body>
</html>



<main class="auth-container py-5">
    <div class="container">
        <div class="col-lg-12">
            <div class="auth-card shadow-lg">
                @RenderBody()
            </div>
        </div>
    </div>
</main>