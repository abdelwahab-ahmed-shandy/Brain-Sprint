@model CoursesVM
@{
    ViewData["Title"] = "Course Management";
}

<div class="container-fluid">
    <!-- Header and Create Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-book-open me-2"></i>Course Management</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Create New
        </a>
    </div>

    <!-- Search and Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <!-- Search Input -->
                <div class="col-md-6 col-lg-4">
                    <label class="form-label">Search</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" name="query" value="@Model.Pagination.Query"
                               placeholder="Search by title, instructor, description...">
                    </div>
                </div>

                <!-- Status Filter -->
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">Status</label>
                    <select class="form-select" name="status">
                        <option value="">All Statuses</option>
                        <option value="active" selected="@(Model.Pagination.StatusFilter == "active")">Active</option>
                        <option value="draft" selected="@(Model.Pagination.StatusFilter == "draft")">Draft</option>
                        <option value="archived" selected="@(Model.Pagination.StatusFilter == "archived")">Archived</option>
                    </select>
                </div>

                <!-- Action Buttons -->
                <div class="col-md-4 col-lg-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        <i class="fas fa-filter me-1"></i> Apply
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Courses Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.Courses.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="300">Title</th>
                                <th>Instructor</th>
                                <th>Learning Path</th>
                                <th class="text-end">Price</th>
                                <th class="text-end">Discount</th>
                                <th>Duration</th>
                                <th>Created</th>
                                <th width="180">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.Courses)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(course.ImgUrl))
                                            {
                                                <img src="@course.ImgUrl" class="rounded me-3" width="40" height="40" alt="@course.Title">
                                            }
                                            <div>
                                                <strong>@course.Title</strong>
                                                <div class="text-muted small text-truncate" style="max-width: 200px">@course.Description</div>
                                            </div>
                                        </div>
                                    </td> 
                                    <td>@course.InstructorName</td>
                                    <td>@(course.LearningPathName ?? "N/A")</td>
                                    <td class="text-end">@course.Price.ToString("C")</td>
                                    <td class="text-end">@(course.Discount?.ToString("P0") ?? "-")</td>
                                    <td>@course.Duration</td>
                                    <td>@course.CreatedDateUtc.ToLocalTime().ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-info" title="Details">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted small">
                            Showing @((Model.Pagination.CurrentPage - 1) * Model.Pagination.PageSize + 1) to
                            @Math.Min(Model.Pagination.CurrentPage * Model.Pagination.PageSize, Model.Pagination.TotalItems) of
                            @Model.Pagination.TotalItems entries
                        </div>

                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-query="@Model.Pagination.Query"
                                       asp-route-status="@Model.Pagination.StatusFilter"
                                       asp-route-page="1">
                                        <i class="fas fa-angle-double-left"></i>
                                    </a>
                                </li>
                                <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-query="@Model.Pagination.Query"
                                       asp-route-status="@Model.Pagination.StatusFilter"
                                       asp-route-page="@(Model.Pagination.CurrentPage - 1)">
                                        <i class="fas fa-angle-left"></i>
                                    </a>
                                </li>

                                @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2);
                               i <= Math.Min(Math.Ceiling((double)Model.Pagination.TotalItems / Model.Pagination.PageSize), Model.Pagination.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-action="Index"
                                           asp-route-query="@Model.Pagination.Query"
                                           asp-route-status="@Model.Pagination.StatusFilter"
                                           asp-route-page="@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.Pagination.CurrentPage >= Math.Ceiling((double)Model.Pagination.TotalItems / Model.Pagination.PageSize) ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-query="@Model.Pagination.Query"
                                       asp-route-status="@Model.Pagination.StatusFilter"
                                       asp-route-page="@(Model.Pagination.CurrentPage + 1)">
                                        <i class="fas fa-angle-right"></i>
                                    </a>
                                </li>
                                <li class="page-item @(Model.Pagination.CurrentPage >= Math.Ceiling((double)Model.Pagination.TotalItems / Model.Pagination.PageSize) ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-query="@Model.Pagination.Query"
                                       asp-route-status="@Model.Pagination.StatusFilter"
                                       asp-route-page="@Math.Ceiling((double)Model.Pagination.TotalItems / Model.Pagination.PageSize)">
                                        <i class="fas fa-angle-double-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-book-open fa-3x text-muted mb-3"></i>
                    <h4>No courses found</h4>
                    <p class="text-muted">Try adjusting your search or filter criteria</p>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-sync-alt me-1"></i> Reset Filters
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            border-top: none;
        }

        .table td {
            vertical-align: middle;
        }

        .card {
            border: none;
            border-radius: 0.5rem;
        }

        .input-group-text {
            background-color: transparent;
        }
    </style>
}

@section Scripts {
    <script>
        // Enhancements could be added here
        document.addEventListener('DOMContentLoaded', function() {
            // Example: Confirm before delete
            document.querySelectorAll('.btn-outline-danger').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to delete this course?')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}