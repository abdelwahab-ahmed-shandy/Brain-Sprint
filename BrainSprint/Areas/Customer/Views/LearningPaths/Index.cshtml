@model IEnumerable<LearningPath>

@{
    ViewData["Title"] = "Learning Paths";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Learning Paths</h1>
        <p class="lead text-muted">Structured roadmaps to master new skills</p>
    </div>

    <div class="row g-4">
        @foreach (var path in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-img-top bg-light" style="height: 180px; background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                        <div class="d-flex align-items-center justify-content-center h-100">
                            <i class="fas fa-road text-white" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@path.Name</h3>
                        <p class="card-text text-muted">@(path.Description?.Length > 100 ? path.Description.Substring(0, 100) + "..." : path.Description)</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a asp-action="Details" asp-route-id="@path.Name.ToLower().Replace(" ", "-")" class="btn btn-primary stretched-link">Explore Path</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>