@model LearningPath

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary">@Model.Name</h1>
                <p class="lead text-muted">@Model.Description</p>
            </div>

            <div class="card shadow-sm mb-5">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="h4 mb-0">Path Curriculum</h2>
                        <span class="badge bg-primary">@Model.CourseLearningPaths.Count courses</span>
                    </div>

                    <div class="list-group">
                        @foreach (var clp in Model.CourseLearningPaths.OrderBy(clp => clp.Course.Title))
                        {
                            var course = clp.Course;
                            <div class="list-group-item list-group-item-action border-0 rounded-3 mb-3 shadow-sm">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0 bg-light rounded-3 p-3 me-3">
                                        <i class="fas fa-book text-primary fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-1">@course.Title</h5>
                                        <p class="mb-1 text-muted">@course.Description</p>
                                        <small class="text-muted">@course.Duration hours</small>
                                    </div>
                                    <div class="flex-shrink-0 ms-3">
                                        @* <span class="badge bg-success">Step @clp.Order</span> *@
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="text-center">
                <a href="#" class="btn btn-primary btn-lg px-4 me-2">Start Learning Path</a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Back to Paths</a>
            </div>
        </div>
    </div>
</div>