@model List<LearningPath>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle text-dark" href="#" id="learningPathsDropdown" role="button"
       data-bs-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
        <i class="fas fa-road me-1 text-success" aria-hidden="true"></i>
        <span class="fw-medium">Learning Paths</span>
        <span class="visually-hidden">(click to expand)</span>
    </a>
    <ul class="dropdown-menu shadow-sm dropdown-menu-end" aria-labelledby="learningPathsDropdown"
        style="border-radius: 10px; min-width: 250px;">

        @if (Model?.Any() == true)
        {
            foreach (var path in Model)
            {
                <li>
                    <a class="dropdown-item d-flex align-items-center py-2"
                       href="@Url.Action("Details", "LearningPaths", new { area = "Customer", id = path.Name.ToLower().Replace(" ", "-") })"
                       aria-label="@path.Name learning path">

                        @if (!string.IsNullOrWhiteSpace(path.IconUrl))
                        {
                            <i class="@path.IconUrl me-2 text-muted" aria-hidden="true"></i>
                        }
                        <span>@path.Name</span>
                    </a>
                </li>
            }
            <li><hr class="dropdown-divider my-1"></li>
        }
        else
        {
            <li><a class="dropdown-item py-2 text-muted">No paths available</a></li>
        }

        <li>
            <a class="dropdown-item d-flex align-items-center py-2" href="/LearningPaths/Index">
                <i class="fas fa-list-ul me-2 text-primary" aria-hidden="true"></i>
                <span>Browse All Paths</span>
                <i class="fas fa-chevron-right ms-auto text-muted" aria-hidden="true"></i>
            </a>
        </li>
    </ul>
</li>
