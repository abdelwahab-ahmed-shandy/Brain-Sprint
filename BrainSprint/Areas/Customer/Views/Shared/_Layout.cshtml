<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrainSprint Learning Platform</title>

    <!-- Favicon -->
    <link rel="icon" href="~/favicon.ico" type="image/png">

    <!-- Primary CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/customer.css" asp-append-version="true" />

    <!-- Icon Libraries -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- UI Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Meta Tags for SEO -->
    <meta name="description" content="BrainSprint - Your ultimate e-learning platform with courses, achievements, and interactive learning experiences.">
    <meta name="keywords" content="e-learning, courses, education, online learning, certifications">
    <meta name="author" content="BrainSprint Team">
</head>

<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- Header Section -->
    <header class="sticky-top shadow-sm">
        <!-- Main Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);">
            <div class="container position-relative">
                <!-- Brand Logo with Animation -->
                <a class="navbar-brand d-flex align-items-center fw-bold" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <img src="~/Assets/Customer/images/logo.png" alt="BrainSprint Logo" class="me-2 animate__animated animate__pulse" width="40" height="40">
                    <span class="text-gradient" style="background: linear-gradient(90deg, #fff 0%, #3498db 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">BrainSprint</span>
                </a>

                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Main Navigation Content -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Courses" asp-action="Index">
                                <i class="fas fa-book me-1"></i> Courses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Learning" asp-action="Index">
                                <i class="fas fa-graduation-cap me-1"></i> My Learning
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Badges" asp-action="Index">
                                    <i class="fas fa-trophy me-1"></i> Achievements
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Search Bar -->
                    <form class="d-flex me-3 search-form" role="search">
                        <div class="input-group">
                            <input class="form-control search-input border-0 shadow-sm" type="search" placeholder="Search courses, lessons..."
                                   aria-label="Search" id="globalSearch" style="min-width: 250px;">
                            <button class="btn btn-primary search-btn" type="submit" style="background: linear-gradient(135deg, #3498db 0%, #2c3e50 100%); border: none;">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <div class="search-results dropdown-menu w-100 p-2 d-none shadow-lg" style="border-radius: 0 0 10px 10px;"></div>
                    </form>

                    <!-- User Section -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Notifications Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle position-relative" href="#" id="notificationsDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-bell"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger notification-badge">
                                        3
                                    </span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end notification-dropdown shadow-lg mt-2"
                                    aria-labelledby="notificationsDropdown" style="width: 350px; border-radius: 10px;">
                                    <li><h6 class="dropdown-header">Notifications</h6></li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="notification-item d-flex align-items-start p-2">
                                                <div class="notification-icon bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-certificate text-white"></i>
                                                </div>
                                                <div class="notification-content ms-3">
                                                    <span class="notification-title fw-bold">Course Completed</span>
                                                    <p class="notification-text mb-1">You finished "Advanced Web Development"</p>
                                                    <small class="notification-time text-muted">2 hours ago</small>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="notification-item d-flex align-items-start p-2">
                                                <div class="notification-icon bg-success rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-trophy text-white"></i>
                                                </div>
                                                <div class="notification-content ms-3">
                                                    <span class="notification-title fw-bold">New Badge Earned</span>
                                                    <p class="notification-text mb-1">You got the "Fast Learner" badge</p>
                                                    <small class="notification-time text-muted">1 day ago</small>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider mx-3"></li>
                                    <li><a class="dropdown-item text-center text-primary fw-bold" asp-controller="Notifications" asp-action="Index">View All Notifications</a></li>
                                </ul>
                            </li>

                            <!-- User Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/images/user-avatar.png" alt="User Avatar"
                                         class="rounded-circle me-2 border border-2 border-primary" width="36" height="36">
                                    <span class="d-none d-lg-inline">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg mt-2" aria-labelledby="userDropdown" style="border-radius: 10px;">

                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-controller="Settings" asp-action="Manage">
                                            <i class="fas fa-cog me-2 text-primary"></i> Settings
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider mx-3"></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                                <i class="fas fa-tachometer-alt me-2 text-warning"></i> Admin Dashboard
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("SuperAdmin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                                <i class="fas fa-shield-alt me-2 text-danger"></i> Super Admin
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Instructor"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="Instructor" asp-controller="Home" asp-action="Index">
                                                <i class="fas fa-chalkboard-teacher me-2 text-primary"></i> Instructor
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <form id="logoutForm" method="post" asp-area="Identity" asp-controller="Account" asp-action="Logout" >
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2 text-danger"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light me-2 login-btn-custom" asp-area="Identity" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary" asp-area="Identity" asp-controller="Account" asp-action="Register" style="background: linear-gradient(135deg, #3498db 0%, #2c3e50 100%); border: none;">
                                    <i class="fas fa-user-plus me-1"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Toggle Secondary Bar Button -->
            <button id="toggleSecondaryBarBtn" class="btn btn-sm position-absolute end-0 me-3"
                    style="bottom: -20px; z-index: 1030; background: #fff; border: none; border-radius: 50%; width: 32px; height: 32px; box-shadow: 0 2px 5px rgba(0,0,0,0.2);"
                    aria-label="Toggle secondary navigation">
                <i class="fas fa-chevron-up text-dark"></i>
            </button>
        </nav>

        <!-- Secondary Navigation -->
        <nav id="secondaryNavbar" class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm" aria-label="Secondary navigation">
            <div class="container">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="categoriesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-list me-1 text-primary"></i> <span class="fw-medium">Categories</span>
                            </a>
                            <ul class="dropdown-menu shadow-sm" aria-labelledby="categoriesDropdown" style="border-radius: 10px;">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-code me-2 text-info"></i> Programming</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-paint-brush me-2 text-success"></i> Design</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-chart-line me-2 text-warning"></i> Business</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-database me-2 text-primary"></i> Data Science</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-list-ul me-2"></i> All Categories</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">
                                <i class="fas fa-fire me-1 text-danger"></i> <span class="fw-medium">Popular Courses</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">
                                <i class="fas fa-bolt me-1 text-warning"></i> <span class="fw-medium">New Releases</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">
                                <i class="fas fa-road me-1 text-success"></i> <span class="fw-medium">Learning Paths</span>
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex">
                        <a href="#" class="btn btn-sm me-2" style="background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%); border: none;">
                            <i class="fas fa-fire me-1 text-white"></i> <span class="text-white fw-medium">Special Offers</span>
                        </a>
                        <a href="#" class="btn btn-sm" style="background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%); border: none;">
                            <i class="fas fa-star me-1 text-white"></i> <span class="text-white fw-medium">Featured Courses</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-shrink-0">
        <!-- Toast Notifications Container -->
        <div aria-live="polite" aria-atomic="true" class="position-relative">
            <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100">
                <!-- Toast messages will be inserted here -->
            </div>
        </div>

        @RenderBody()
    </main>

    <!-- Footer Section -->
