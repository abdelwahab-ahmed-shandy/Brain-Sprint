<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="BrainSprint - Interactive Gamified Learning Platform" />
    <meta name="author" content="Your Name" />
    <title>@ViewData["Title"] - BrainSprint</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/favicon.ico">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Assets/Identity/css/site.css" />
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head>
<body>
    <header class="py-2">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark p-0">
                <a class="navbar-brand d-flex align-items-center" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <img src="~/Assets/Customer/images/logo.png" alt="BrainSprint Logo" width="40" height="40" class="me-2">
                    <span class="brand-text">BrainSprint</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Courses" asp-action="Index">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="LearningPath" asp-action="Index">Learning Paths</a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ms-lg-3">
                                <a class="nav-link btn btn-outline-light" asp-area="Identity" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-lg-3">
                                <a class="nav-link btn btn-accent" asp-area="Identity" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i> Register
                                </a>
                            </li>
                            <li class="nav-item ms-lg-2">
                                <a class="nav-link btn btn-accent" asp-area="Identity" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                        }
                    </ul>


                </div>
            </nav>
        </div>
    </header>

    <main class="auth-container py-5">
        <div class="container">
                <div class="col-lg-12">
                    <div class="auth-card shadow-lg">
                        @RenderBody()
                    </div>
                </div>
        </div>
    </main>

    <footer class="py-4 mt-auto">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    © @DateTime.Now.Year <strong>
                        <i class="bi bi-mortarboard-fill me-2"></i>
                        BrainSprint
                    </strong> — Gamified Learning Platform
                </div>
                <div class="d-flex">
                    <a href="#" target="_blank" class="text-decoration-none me-3">
                        <i class="bi bi-linkedin text-primary fs-5"></i>
                    </a>
                    <a href="#" target="_blank" class="text-decoration-none me-3">
                        <i class="bi bi-twitter-x text-light fs-5"></i>
                    </a>
                    <a href="#" target="_blank" class="text-decoration-none">
                        <i class="bi bi-github text-white fs-5"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/assets/dashboard/js/scripts.js"></script>
    
    @await Html.PartialAsync("_Notification")

    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>