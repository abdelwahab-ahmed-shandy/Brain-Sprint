@{
    ViewData["Title"] = "Create Courses";
}

<div class="main-content">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="form-container">

                    <!-- Form Header -->
                    <div class="form-header">
                        <div class="form-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <div class="form-header-content">
                            <h2>Course Registration</h2>
                            <p>Add new course to BrainSprint platform</p>
                        </div>
                    </div>

                    <!-- Form Body -->
                    <div class="form-body">
                        <form id="courseForm">
                            <!-- Basic Information Section -->
                            <div class="mb-5">
                                <h5 class="section-title">
                                    <i class="fas fa-info-circle"></i>Basic Information
                                </h5>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="courseTitle" class="form-label">Course Title</label>
                                        <input type="text" class="form-control form-control-lg" id="courseTitle" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="courseCategory" class="form-label">Category</label>
                                        <select class="form-select form-select-lg" id="courseCategory" required>
                                            <option value="" selected disabled>Select category</option>
                                            <option>Programming</option>
                                            <option>Web Development</option>
                                            <option>Data Science</option>
                                            <option>Artificial Intelligence</option>
                                            <option>Mobile Development</option>
                                        </select>
                                    </div>
                                    <div class="col-12">
                                        <label for="courseDescription" class="form-label">Description</label>
                                        <textarea class="form-control" id="courseDescription" rows="3" required></textarea>
                                    </div>
                                </div>
                            </div>

                            <!-- Course Details Section -->
                            <div class="mb-5">
                                <h5 class="section-title">
                                    <i class="fas fa-cog"></i>Course Details
                                </h5>
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label for="courseLevel" class="form-label">Difficulty Level</label>
                                        <select class="form-select" id="courseLevel" required>
                                            <option value="" selected disabled>Select level</option>
                                            <option>Beginner</option>
                                            <option>Intermediate</option>
                                            <option>Advanced</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="courseDuration" class="form-label">Duration (weeks)</label>
                                        <input type="number" class="form-control" id="courseDuration" min="1" max="52" required>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="coursePrice" class="form-label">Price ($)</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input type="number" class="form-control" id="coursePrice" min="0" step="0.01" required>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="languages-section" style="background-color: #f8fafc; border-radius: 10px; padding: 20px;">
                                            <label class="form-label" style="font-weight: 600; color: #1a4b8c; margin-bottom: 15px;">
                                                <i class="fas fa-language me-2" style="color: #d4af37;"></i>Course Language
                                            </label>

                                            <div class="language-options d-flex flex-wrap gap-3">
                                                <div class="form-check" style="min-width: 120px;">
                                                    <input class="form-check-input" type="radio" name="courseLanguage" id="english" value="English" checked
                                                           style="width: 18px; height: 18px; border: 2px solid #1a4b8c; margin-top: 2px;">
                                                    <label class="form-check-label d-flex align-items-center" for="english"
                                                           style="color: #1a4b8c; font-weight: 500; margin-left: 10px;">
                                                        <i class="fab fa-font-awesome-flag me-2" style="color: #d4af37;"></i> English
                                                    </label>
                                                </div>

                                                <div class="form-check" style="min-width: 120px;">
                                                    <input class="form-check-input" type="radio" name="courseLanguage" id="arabic" value="Arabic"
                                                           style="width: 18px; height: 18px; border: 2px solid #1a4b8c; margin-top: 2px;">
                                                    <label class="form-check-label d-flex align-items-center" for="arabic"
                                                           style="color: #1a4b8c; font-weight: 500; margin-left: 10px;">
                                                        <i class="fas fa-mosque me-2" style="color: #d4af37;"></i> Arabic
                                                    </label>
                                                </div>

                                                <div class="form-check" style="min-width: 120px;">
                                                    <input class="form-check-input" type="radio" name="courseLanguage" id="other" value="Other"
                                                           style="width: 18px; height: 18px; border: 2px solid #1a4b8c; margin-top: 2px;">
                                                    <label class="form-check-label d-flex align-items-center" for="other"
                                                           style="color: #1a4b8c; font-weight: 500; margin-left: 10px;">
                                                        <i class="fas fa-globe-americas me-2" style="color: #d4af37;"></i> Other
                                                    </label>
                                                </div>
                                            </div>

                                            <div id="customLanguageContainer" class="mt-3" style="display: none;">
                                                <label for="customLanguage" class="form-label" style="font-weight: 500; color: #1a4b8c;">
                                                    Specify Language
                                                </label>
                                                <input type="text" class="form-control" id="customLanguage"
                                                       style="border: 1px solid #ced4da; border-radius: 8px; padding: 10px 15px;">
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Add this in the Course Details section, after the Price input -->

                                    <div class="col-md-4">
                                        <label for="courseDiscount" class="form-label">Discount (%)</label>
                                        <div class="input-group">
                                            <span class="input-group-text">%</span>
                                            <input type="number" class="form-control" id="courseDiscount" min="0" max="100" step="1"
                                                   placeholder="0" style="border: 1px solid #ced4da; border-radius: 0 8px 8px 0; padding: 10px 15px;">
                                        </div>
                                        <div class="form-text" style="font-size: 0.8rem; color: #6c757d; margin-top: 5px;">
                                            Enter percentage discount (0-100)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Media Section -->
                            <div class="mb-5">
                                <h5 class="section-title">
                                    <i class="fas fa-images"></i> Media
                                </h5>
                                <div class="row g-3">
                                    <!-- Image Upload -->
                                    <div class="col-md-6 d-flex flex-column">
                                        <label class="form-label">Course Thumbnail</label>
                                        <div class="file-upload h-100" id="imageUploadContainer">
                                            <input type="file" id="imageUpload" accept="image/*" style="display: none;">
                                            <i class="fas fa-cloud-upload-alt file-upload-icon"></i>
                                            <h5>Drag & drop your image here</h5>
                                            <p class="text-muted">or click to browse</p>
                                            <img src="" class="preview-image" id="imagePreview">
                                            <button type="button" class="remove-btn" id="removeImageBtn" style="display: none;">
                                                <i class="fas fa-times"></i>
                                            </button>
                                            <div class="file-info mt-2" id="imageFileInfo" style="display: none;"></div>
                                        </div>
                                    </div>

                                    <!-- Video Upload -->
                                    <div class="col-md-6 d-flex flex-column">
                                        <label class="form-label">Promotional Video</label>
                                        <div class="video-upload-container h-100" id="videoUploadContainer">
                                            <input type="file" id="videoUpload" accept="video/*" style="display: none;">
                                            <i class="fas fa-video file-upload-icon"></i>
                                            <h5>Drag & drop your video here</h5>
                                            <p class="text-muted">MP4, MOV or AVI (Max 500MB)</p>
                                            <div class="video-preview" id="videoPreview">
                                                <video controls></video>
                                                <div class="file-info mt-2" id="videoFileInfo"></div>
                                            </div>
                                            <button type="button" class="remove-btn" id="removeVideoBtn" style="display: none;">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <!-- Divider -->
                                <div class="divider" style="text-align: center; margin: 20px 0; position: relative;">
                                    <span style="background-color: white; padding: 0 15px; position: relative; z-index: 1; color: #6c757d; font-size: 0.9rem;">
                                        OR
                                    </span>
                                    <hr style="position: absolute; top: 50%; left: 0; right: 0; margin: 0; z-index: 0; border-color: #e0e0e0;">
                                </div>

                                <!-- Video URL Option -->
                                <div class="video-url-option my-4">
                                    <div class="input-group">
                                        <span class="input-group-text" style="background-color: #f8f9fa; color: #1a4b8c;">
                                            <i class="fas fa-link"></i>
                                        </span>
                                        <input type="url" class="form-control" id="videoUrl" placeholder="https://youtube.com/..."
                                               style="border: 1px solid #ced4da; border-radius: 0 8px 8px 0; padding: 10px 15px;">
                                    </div>
                                    <div class="form-text" style="font-size: 0.8rem; color: #6c757d; margin-top: 5px;">
                                        Paste YouTube or Vimeo link
                                    </div>
                                </div>



                                <!-- Form Actions -->
                                <div class="d-flex justify-content-between mt-5">
                                    <button type="button" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i> Cancel
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i> Publish Course
                                    </button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Image Upload Functionality
    const imageUpload = document.getElementById('imageUpload');
    const imageUploadContainer = document.getElementById('imageUploadContainer');
    const imagePreview = document.getElementById('imagePreview');
    const removeImageBtn = document.getElementById('removeImageBtn');
    const imageFileInfo = document.getElementById('imageFileInfo');

    // Video Upload Functionality
    const videoUpload = document.getElementById('videoUpload');
    const videoUploadContainer = document.getElementById('videoUploadContainer');
    const videoPreview = document.getElementById('videoPreview');
    const videoElement = videoPreview.querySelector('video');
    const removeVideoBtn = document.getElementById('removeVideoBtn');
    const videoFileInfo = document.getElementById('videoFileInfo');

    // Make containers clickable
    imageUploadContainer.addEventListener('click', () => imageUpload.click());
    videoUploadContainer.addEventListener('click', () => videoUpload.click());

    // Handle image upload
    imageUpload.addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            // Validate image file
            if (!file.type.match('image.*')) {
                alert('Please select an image file (JPEG, PNG, etc.)');
                return;
            }

            const reader = new FileReader();
            reader.onload = function(event) {
                imagePreview.src = event.target.result;
                imagePreview.style.display = 'block';
                removeImageBtn.style.display = 'block';

                // Hide upload prompt
                imageUploadContainer.querySelector('h5').style.display = 'none';
                imageUploadContainer.querySelector('p').style.display = 'none';
                imageUploadContainer.querySelector('.file-upload-icon').style.display = 'none';

                // Show file info
                imageFileInfo.textContent = `${file.name} (${formatFileSize(file.size)})`;
                imageFileInfo.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    });

    // Handle video upload
    videoUpload.addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            // Validate video file
            const validTypes = ['video/mp4', 'video/quicktime', 'video/x-msvideo'];
            if (!validTypes.includes(file.type)) {
                alert('Please select a video file (MP4, MOV, or AVI)');
                return;
            }

            if (file.size > 500 * 1024 * 1024) {
                alert('Video file size exceeds 500MB limit');
                return;
            }

            const videoURL = URL.createObjectURL(file);
            videoElement.src = videoURL;
            videoPreview.style.display = 'block';
            removeVideoBtn.style.display = 'block';

            // Hide upload prompt
            videoUploadContainer.querySelector('h5').style.display = 'none';
            videoUploadContainer.querySelector('p').style.display = 'none';
            videoUploadContainer.querySelector('.file-upload-icon').style.display = 'none';

            // Show file info
            videoFileInfo.textContent = `${file.name} (${formatFileSize(file.size)})`;
        }
    });

    // Remove image
    removeImageBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        imageUpload.value = '';
        imagePreview.src = '';
        imagePreview.style.display = 'none';
        removeImageBtn.style.display = 'none';
        imageFileInfo.style.display = 'none';

        // Show upload prompt again
        imageUploadContainer.querySelector('h5').style.display = 'block';
        imageUploadContainer.querySelector('p').style.display = 'block';
        imageUploadContainer.querySelector('.file-upload-icon').style.display = 'block';
    });

    // Remove video
    removeVideoBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        videoUpload.value = '';
        videoElement.src = '';
        videoPreview.style.display = 'none';
        removeVideoBtn.style.display = 'none';
        videoFileInfo.textContent = '';

        // Show upload prompt again
        videoUploadContainer.querySelector('h5').style.display = 'block';
        videoUploadContainer.querySelector('p').style.display = 'block';
        videoUploadContainer.querySelector('.file-upload-icon').style.display = 'block';
    });

    // Drag and drop for image
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        imageUploadContainer.addEventListener(eventName, preventDefaults, false);
    });

    function preventDefaults(e) {
        e.preventDefault();
        e.stopPropagation();
    }

    ['dragenter', 'dragover'].forEach(eventName => {
        imageUploadContainer.addEventListener(eventName, highlightImage, false);
    });

    ['dragleave', 'drop'].forEach(eventName => {
        imageUploadContainer.addEventListener(eventName, unhighlightImage, false);
    });

    function highlightImage() {
        imageUploadContainer.classList.add('highlight');
    }

    function unhighlightImage() {
        imageUploadContainer.classList.remove('highlight');
    }

    imageUploadContainer.addEventListener('drop', handleImageDrop, false);

    function handleImageDrop(e) {
        const dt = e.dataTransfer;
        const files = dt.files;
        imageUpload.files = files;
        const event = new Event('change');
        imageUpload.dispatchEvent(event);
    }

    // Drag and drop for video
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        videoUploadContainer.addEventListener(eventName, preventDefaults, false);
    });

    ['dragenter', 'dragover'].forEach(eventName => {
        videoUploadContainer.addEventListener(eventName, highlightVideo, false);
    });

    ['dragleave', 'drop'].forEach(eventName => {
        videoUploadContainer.addEventListener(eventName, unhighlightVideo, false);
    });

    function highlightVideo() {
        videoUploadContainer.classList.add('highlight');
    }

    function unhighlightVideo() {
        videoUploadContainer.classList.remove('highlight');
    }

    videoUploadContainer.addEventListener('drop', handleVideoDrop, false);

    function handleVideoDrop(e) {
        const dt = e.dataTransfer;
        const files = dt.files;
        videoUpload.files = files;
        const event = new Event('change');
        videoUpload.dispatchEvent(event);
    }

    // Helper function to format file size
    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
    }

    // Add highlight class to CSS
    const style = document.createElement('style');
    style.textContent = `
        .highlight {
            border-color: #1a4b8c !important;
            background-color: rgba(212, 175, 55, 0.2) !important;
        }
    `;
    document.head.appendChild(style);
</script>