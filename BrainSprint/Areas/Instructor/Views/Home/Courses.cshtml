                <thead>
                    <tr>
                        <th style="width: 50px;"></th>
                        <th>Course Name</th>
                        <th>Students</th>
                        <th>Average</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="course-icon" style="background-color: #e3f2fd; color: #4a6fa5; width: 40px; height: 40px; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                                <i class="fab fa-python"></i>
                            </div>
                        </td>
                        <td>
                            <div style="font-weight: 600;">Python Fundamentals</div>
                            <div style="font-size: 12px; color: #777;">Python programming basics</div>
                        </td>
                        <td>142</td>
                        <td>
                            <div style="display: flex; align-items: center;">
                                <div style="width: 60px; height: 6px; background-color: #e0e0e0; border-radius: 3px; margin-right: 10px;">
                                    <div style="height: 100%; width: 89%; background: linear-gradient(to right, #4a6fa5, #4fc3f7); border-radius: 3px;"></div>
                                </div>
                                <span>89%</span>
                            </div>
                        </td>
                        <td>
                            <span class="badge success">Active</span>
                        </td>
                        <td>
                            <button style="background: none; border: none; color: #4a6fa5; cursor: pointer; margin-right: 10px;" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button style="background: none; border: none; color: #dc3545; cursor: pointer;" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
