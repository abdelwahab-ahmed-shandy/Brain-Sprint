@{
    ViewData["Title"] = "Courses";
}

<div class="main-content">
    <div class="section">
        <div class="section-header">
            <h3 class="section-title">Courses Management</h3>
            <a href="/Instructor/Home/Create" style="text-decoration:none; background: linear-gradient(135deg, var(--primary), var(--secondary)); color: white; border: none; padding: 8px 15px; border-radius: 4px; cursor: pointer;">
                <i class="fas fa-plus"></i> Add New Course
            </a>
        </div>

        <div class="search-bar" style="margin-bottom: 20px; width: 100%;">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Search courses...">
            <select style="margin-left: 10px; padding: 5px; border-radius: 4px; border: 1px solid #ddd;">
                <option>All Categories</option>
                <option>Programming</option>
                <option>Web Development</option>
                <option>Databases</option>
                <option>Artificial Intelligence</option>
            </select>
        </div>

        <div class="courses-table">
